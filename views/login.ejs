<!doctype html>
<html>
  <head>
    <title><%=websiteName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css"/>

  </head>
  <body>
    <header class="jumbotron-header">
      <h1>Please log in to <%=websiteName%> here</h1>
    </header>

    <nav class="mainmenu-background">
      <!-- Navigation links to each of the pages in nav bar -->
      <ul class="mainmenu-list">
          <li class="mainmenu-items"><a class="mainmenu-link" href="/">Home Page</a></li>
          <li class="mainmenu-items"><a class="mainmenu-link" href="about">About <%=websiteName%></a></li>
          <li class="mainmenu-items"><a class="mainmenu-link" href="topics">See all topics</a></li>
          <li class="mainmenu-items"><a class="mainmenu-link" href="users">See all users</a></li>
          <li class="mainmenu-items"><a class="mainmenu-link" href="posts">See all posts</a></li>
          <li class="mainmenu-items"><a class="mainmenu-link" href="addposts">Add to posts</a></li>
          <li class="mainmenu-items"><a class="mainmenu-link" href="search">Search all posts</a></li>
      </ul>
    </nav>

    <section class="login-section">
      <p class="login-p">You must log in to access the forum</p>
      <% if(messages.error) { %>
        <p class="login-p"><%= messages.error %></p>
      <% } %>
      <p class="login-p">Please enter your username and password here, as provided by the school</p>
      <form action="/login" method="POST">
        <div class="login-div">
          <label for="user_name">Username:</label>
          <input class="login-input" type="text" id="user_name" name="user_name" required>
        </div>

        <div class="login-div">
          <label for="password">Password:</label>
          <input class="login-input" type="password" id="password" name="password" required>
        </div>

        <div class="login-div">
          <button class="login-button" type="submit">Login</button>
        </div>
      </form>
    </section>
